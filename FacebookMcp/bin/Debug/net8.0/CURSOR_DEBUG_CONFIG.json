{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FacebookMcp Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/FacebookMcp/bin/Debug/net8.0/FacebookMcp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FacebookMcp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5250"
            }
        }
    ]
}


